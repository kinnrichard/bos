// Main SCSS entry point following ITCSS architecture

// 1. Settings - Design tokens and configuration
@use 'settings';

// 2. Tools - Mixins and functions
@use 'tools';

// 3. Generic - Reset and normalization (to be created)
// @import 'generic/index';

// 4. Elements - Base HTML elements (to be created)
// @import 'elements/index';

// 5. Objects - Layout patterns (to be created)
// @import 'objects/index';

// 6. Components - UI components
@use 'components/index' as components;

// 7. Utilities - Helper classes (to be created)
// @import 'utilities/index';

// Import existing styles temporarily
// These will be refactored into the appropriate layers
@use 'job_view';

