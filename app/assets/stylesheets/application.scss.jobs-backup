/* ===== JOB VIEW OVERRIDES ===== */
/* Job title section */
.job-title-section {
  margin-bottom: 24px;
  padding: 0 30px; /* Align with task content */
}

/* Force blue color on job title */
.job-title,
h1.job-title,
.job-title[contenteditable="true"] {
  color: #0A84FF !important;
  -webkit-text-fill-color: #0A84FF !important;
  font-size: 32px;
  font-weight: 600;
  margin: 0;
  outline: none;
  border: none;
  background: transparent;
  padding: 4px 2px;
  border-radius: 4px;
  transition: background-color 0.15s ease;
}

.job-title[contenteditable="true"]:hover {
  background-color: var(--bg-secondary);
}

.job-title[contenteditable="true"]:focus {
  background-color: var(--bg-secondary);
}

/* Task wrapper for proper layout */
.task-wrapper {
  position: relative;
}

/* Override task-item styles for job view */
.job-view .task-item {
  display: flex !important;
  align-items: center !important;
  padding: 8px 30px !important;
  margin: 0 -30px !important; /* Extend to viewport edges */
  width: calc(100% + 60px) !important; /* Full width plus margins */
  border: none !important;
  border-radius: 0 !important;
  background: none !important;
  background-color: transparent !important;
  gap: 8px !important;
  position: relative;
  min-height: 32px;
  transition: background-color 0.15s ease;
}

/* Task status container and button */
.task-status-container {
  position: relative;
  margin-top: 2px;
  isolation: isolate; /* Creates new stacking context without z-index */
}

.task-status-button {
  -webkit-appearance: none;
  appearance: none;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  font-size: 20px;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
  border-radius: 4px;
  transition: background-color 0.15s ease;
}

.task-status-button:hover {
  background-color: var(--bg-secondary);
}

/* Task status dropdown */
.task-status-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  margin-top: 4px;
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-primary);
  border-radius: 8px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
  min-width: 220px;
  z-index: 100;
  overflow: hidden;
  outline: none; /* Remove focus outline since we handle it with styling */
}

/* When dropdown is open, ensure proper stacking */
.task-status-container:has(.task-status-dropdown:not(.hidden)) {
  z-index: 50;
}

/* Special case: dropdown in selected task needs to be above the selection */
.task-item.selected .task-status-dropdown:not(.hidden),
.subtask-item.selected .task-status-dropdown:not(.hidden) {
  z-index: 200;
  position: absolute;
}

.task-status-option {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 8px 16px;
  background: none;
  border: none;
  color: var(--text-primary);
  cursor: pointer;
  transition: background-color 0.15s;
  text-align: left;
  font-size: 14px;
  width: 100%;
}

.task-status-option:hover,
.task-status-option.keyboard-focused,
.task-status-option.active {
  background-color: var(--accent-blue);
  color: white;
}

.task-status-option .status-emoji {
  font-size: 16px;
}

/* Task completed state */
.job-view .task-item.completed .task-title {
  color: var(--text-tertiary);
  text-decoration: line-through;
}

/* Drag and drop styles */
.job-view .task-item {
  cursor: default;
  transition: opacity 0.2s ease;
}

.job-view .task-item:active:not(.selected) {
  cursor: move;
}

.job-view .task-item.dragging {
  opacity: 0.4;
}

.job-view .task-item.drag-over-top {
  border-top: 2px solid var(--accent-blue);
  padding-top: 10px !important;
}

.job-view .task-item.drag-over-bottom {
  border-bottom: 2px solid var(--accent-blue);
  padding-bottom: 10px !important;
}

/* Task Selection and Multi-selection */
.task-item.selected,
.subtask-item.selected {
  background-color: var(--accent-blue) !important;
  border-color: var(--accent-blue);
  position: relative;
  /* NO z-index here - this prevents stacking context issues */
}

.task-item.selected .task-title,
.subtask-item.selected .subtask-title,
.task-item.selected .task-time-tracking,
.subtask-item.selected .subtask-time-tracking,
.task-item.selected .task-assignee-icon,
.task-item.selected .task-status-button span,
.subtask-item.selected .subtask-status-button span,
.task-item.selected .time-value,
.subtask-item.selected .time-value {
  color: white !important;
}

.task-item.selected .task-status-container,
.subtask-item.selected .task-status-container {
  filter: brightness(1.5);
}

/* Task rename input */
.task-rename-input {
  width: 100%;
  background: transparent;
  border: none;
  outline: none;
  font-size: 14px;
  font-weight: 500;
  color: var(--text-primary);
  font-family: inherit;
  padding: 0;
  margin: 0;
}

/* New task input row */
.new-task {
  display: flex;
  align-items: center;
  padding: 8px 30px;
  margin: 0 -30px;
  width: calc(100% + 60px);
  min-height: 32px;
  background-color: transparent;
}

.new-task-input {
  width: 100%;
  background: transparent;
  border: none;
  outline: none;
  font-size: 14px;
  color: var(--text-primary);
