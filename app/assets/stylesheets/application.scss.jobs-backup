.new-task-item .new-task-input {
  width: 100%;
  background: transparent;
  border: none;
  outline: none;
  font-size: 14px;
  font-weight: 500;
  color: var(--text-primary);
  font-family: inherit;
  padding: 0;
  margin: 0;
}

.new-task-item .new-task-input::placeholder {
